<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>ShortUrl</AssemblyName>
    <RootNamespace>ShortUrl</RootNamespace>
    <PackageId>ShortUrl</PackageId>
    <Version>1.0.0</Version>
    <Authors>YourName</Authors>
    <Description>A secure and feature-rich URL shortening library.</Description>
    <Copyright>(c) YourName</Copyright>
    <PackageTags>url-shortener, url, library</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/YourUsername/ShortUrl</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

</Project>
